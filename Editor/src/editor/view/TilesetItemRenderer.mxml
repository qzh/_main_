<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	
	<fx:Script>
		<![CDATA[
			import tile.managers.ResourceManager;
			
		]]>
	</fx:Script>
	
	<s:HGroup width="100%" height="96" horizontalAlign="left" verticalAlign="middle">
		<s:Image width="96" height="96" source="{data.bitmap}"/>
		<mx:UIComponent width="5"/>
		<s:VGroup  width="100%" height="94">
			<s:Label fontSize="16" text="{data.id}"/>
			<s:Label fontSize="12" text="{data.width + 'x' + data.height}"/>
		</s:VGroup>
		
	</s:HGroup>
	
</s:ItemRenderer>
